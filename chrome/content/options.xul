<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://launchpad-mozest-org/skin/options.css" type="text/css"?>
<!DOCTYPE prefwindow [
    <!ENTITY % launchpadDTD SYSTEM "chrome://launchpad-mozest-org/locale/locale.dtd">
    %launchpadDTD;
]>
<prefwindow xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
            xmlns:html="http://www.w3.org/1999/xhtml"
            id="preferences-window"
            title="&options.WindowTitle;"
            windowtype="launchpad-mozest-org:options">
    <prefpane>
        <preferences>
            <preference id="pref-set-as-homepage" name="extensions.launchpad-mozest-org.setAsHomepage" type="bool"/>
            <preference id="pref-load-in-newtab-page" name="extensions.launchpad-mozest-org.loadInNewtabPage" type="bool"/>
        </preferences>
        <vbox pack="center">
            <box pack="center" id="logo"/>
            <hbox pack="center">
                <grid id="group">
                    <columns>
                        <column flex="1"/>
                    </columns>
                    <rows>
                        <row align="center">
                            <label control="keystroke-recorder" value="&options.openLaunchpad;"/>
                            <box class="setting-box">
                                <html:input id="keystroke-recorder"/>
                                <html:input id="keystroke-recorder-input"/>
                                <html:img id="clear-shortcut" class="input-clear-button" width="16" height="16" src="chrome://launchpad-mozest-org/skin/icons/clear.svg"/>
                            </box>
                        </row>
                        <row>
                            <spacer id="spacer"/>
                        </row>
                        <row align="center">
                            <spacer/>
                            <box class="setting-box">
                                <checkbox id="set-as-homepage" label="&options.setAsHomepage;" preference="pref-set-as-homepage"/>
                            </box>
                        </row>
                        <row align="center">
                            <spacer/>
                            <box class="setting-box">
                                <checkbox id="load-in-newtab-page" label="&options.loadInNewtabPage;" preference="pref-load-in-newtab-page"/>
                            </box>
                        </row>
                    </rows>
                </grid>
            </hbox>
        </vbox>
    </prefpane>
    <script src="chrome://launchpad-mozest-org/content/common.js"/>
    <script src="chrome://launchpad-mozest-org/content/options.js"/>
</prefwindow>